nav.navbar.navbar-default.navbar-fixed-top
	.navbar-header
		a.navbar-brand(href='/') Thumblr
	ul.nav.navbar-form.navbar-right
					.form-group
						if user
										a(href='/createPost')
													button.btn.btn-primary(type='button') Create Post
										a(href='/profile')
													button.btn.btn-primary(type='button') Profile
										a(href='/logout')
													button.btn.btn-primary(type='button') Logout
										p.navbar-text.navbar-left Signed in as: 
													a.navbar-link(href='profile') #{user.username}
						else
										form(action='/login', method='POST')
													.form-group
															input#username.form-control(type='username', name='username', placeholder='Username')
													.form-group
															input#password.form-control(type='password', name='password', placeholder='Password')
													button.btn.btn-success(type='submit', id='submit') Login

															a(href='/register')
																		button.btn.btn-info(type='button') Register
