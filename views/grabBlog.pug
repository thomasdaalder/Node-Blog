extends layout

block content
  .grabblog
      p
      | <h2>#{blogPost.title}</h2>
      p
      | #{blogPost.body}
      footer
      | #{blogPost.date}

      h1 Comments about this blog post
      - for (var i = 0; i < blogPost.comments.length; i++) {
        p Username: #{blogPost.comments[i].username}
        p Comment: #{blogPost.comments[i].body}
      - }

      h1 Leave a comment
      form(action='/blog/' + paramsID, method='POST')
        .form-group
          label(for='exampleInputEmail1') Username
          input#username.form-control(type='username', name='username', placeholder='Username')
        .form-group
          label(for='exampleInputPassword1') Comment Text
          textarea#comment.form-control(type='comment', rows='5', name='comment', placeholder='Comment here')
        button.btn.btn-default(type='submit') Place Comment
